@using Starter.Blazor.Layout.Pagenotfound
@using Starter.Blazor.Layout.Public
<CascadingAuthenticationState>
    <CascadingBlazoredModal DisableBackgroundCancel="true" HideCloseButton="true">
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <Authorizing>
                        <text>Please wait, we are authorizint the user.</text>
                    </Authorizing>
                    <NotAuthorized>
                        @{
                            _navManager.NavigateTo("/"); 
                        }
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(AuthLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingBlazoredModal>
</CascadingAuthenticationState>
